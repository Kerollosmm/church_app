rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check user role
    function hasRole(role) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return hasRole('admin');
    }
    
    // Helper function to check if user is servant
    function isServant() {
      return hasRole('servant');
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read all users
      allow read: if isAdmin();
      // Only admins can write to user documents
      allow write: if isAdmin();
    }
    
    // Students collection
    match /students/{studentId} {
      // Authenticated users can read students
      allow read: if isAuthenticated();
      // Only admins can write students
      allow write: if isAdmin();
    }
    
    // Attendance sessions collection
    match /attendance_sessions/{sessionId} {
      // Authenticated users can read sessions
      allow read: if isAuthenticated();
      // Servants can create sessions
      allow create: if isServant() || isAdmin();
      // Only admins can update/delete sessions
      allow update, delete: if isAdmin();
    }
    
    // Attendance records collection
    match /attendance_records/{recordId} {
      // Authenticated users can read records
      allow read: if isAuthenticated();
      // Servants can create and update records (for marking attendance)
      allow create, update: if isServant() || isAdmin();
      // Only admins can delete records
      allow delete: if isAdmin();
    }
    
    // Conflict cases collection (admin only)
    match /conflict_cases/{conflictId} {
      // Only admins can read/write conflict cases
      allow read, write: if isAdmin();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // System (Cloud Functions) creates notifications, users can update read status
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Audit log collection (admin read only)
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      // Only Cloud Functions can write audit logs
      allow write: if false;
    }
  }
}
